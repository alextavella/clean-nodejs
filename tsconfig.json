{
  "compilerOptions": {
    "target": "es6" ,
    "module": "commonjs" ,
    "sourceMap": true ,
    "outDir": "dist" ,
    "rootDir": "src" ,
    "strict": true ,
    "baseUrl": "src" ,
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"],
    },
    "esModuleInterop": true ,
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests"],
  "exclude": []
}
